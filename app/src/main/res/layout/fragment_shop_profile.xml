<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_local_dark"
    tools:context=".Fragments.ShopProfileFragment">

    <ImageView
        android:id="@+id/FragmentShopProfile_imageView_shopImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/shop_header_mock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/shop_header_mock" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/ShopProfileFragment_textView_addressHeader"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FragmentShopProfile_imageView_shopImage" />

    <TextView
        android:id="@+id/FragmentShopProfile_textView_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="LocationTextView"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/ShopProfileFragment_textView_phoneNumberHeader"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/fragmentShopProfile_btn_editProfile"
        app:layout_constraintTop_toBottomOf="@+id/FragmentShopProfile_imageView_shopImage" />

    <TextView
        android:id="@+id/FragmentShopProfile_textView_PhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Phone number TextView"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/fragmentShopProfile_btn_editProfile"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ShopProfileFragment_textView_shopDescriptionHeader"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentShopProfile_textView_shopNameText" />

    <TextView
        android:id="@+id/FragmentShopProfile_textView_shopDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/fragmentShopProfile_btn_editProfile"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:drawableBottom="@drawable/ic_baseline_edit_24"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FragmentShopProfile_imageView_shopImage" />

    <FrameLayout
        android:id="@+id/fragmentShopProfile_fragmentParent_shopsPosts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FragmentShopProfile_textView_shopDescription" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragmentShopProfile_btn_addPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/indian_red_700"
        app:fabSize="mini"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add_foreground"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/fragmentShopProfile_textView_shopNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentShopProfile_textView_shopNameHeader" />

    <TextView
        android:id="@+id/fragmentShopProfile_textView_shopNameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/ShopProfileFragment_textView_shopNameHeader"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FragmentShopProfile_textView_PhoneNumber" />


</androidx.constraintlayout.widget.ConstraintLayout>